<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profile_details"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Update Profile"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/shop_Name_ET"
            android:layout_margin="5dp"
            android:hint="Enter Shop Name"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/gst_Number_ET"
            android:layout_margin="5dp"
            android:hint="Enter GST Number"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/location_ET"
            android:layout_margin="5dp"
            android:hint="Enter Location Details"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/pincode_ET"
            android:layout_margin="5dp"
            android:inputType="phone"
            android:hint="Enter Pincode"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/services_ET"
            android:layout_margin="5dp"
            android:hint="Enter Services"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Update"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>