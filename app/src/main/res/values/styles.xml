<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Network Connector-->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- ...other stuff here... -->
    </style>

    <!--hz Material View-->
    <style name="hzView" parent="Widget.AppCompat.Light.AutoCompleteTextView" />

    <style name="hzView.Material">
        <item name="android:layout_marginStart">@dimen/material_margin_xs</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_xs</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">@dimen/material_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
