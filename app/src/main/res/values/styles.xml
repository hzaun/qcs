<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!--Network Connector-->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- ...other stuff here... -->
    </style>

    <!--hz Material View-->
    <style name="hzView" parent="Widget.AppCompat.Light.AutoCompleteTextView" />

    <style name="hzView.Material">
        <item name="android:layout_marginStart">@dimen/material_margin_xs</item>
        <item name="android:layout_marginEnd">@dimen/material_margin_xs</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">@dimen/material_view_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="hzView.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="hzView.FloatingAccentButtonOverlay">
        <item name="colorAccent">@color/darkGray</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="hzView.WorkingDayText" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>
</resources>
